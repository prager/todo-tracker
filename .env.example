NODE_ENV=production
PORT=3000
BASE_URL=https://web4.leho-62.info
DB_PATH=./data/todos.sqlite
TIMEZONE=UTC

# Login settings (single user)
AUTH_USERNAME=admin
AUTH_PASSWORD=change-me
# Optional alternative to support any special characters safely:
# AUTH_PASSWORD_B64=$(printf '%s' 'your#pa$$word!with:anything' | base64 -w0)
AUTH_SESSION_SECRET=change-this-session-secret
AUTH_SESSION_MAX_AGE_HOURS=12

# SMTP security: store real values only in a local .env file with chmod 600
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=todo-bot@example.com
SMTP_PASS=replace_with_secret_password
SMTP_FROM=todo-bot@example.com

# Optional controls
ENABLE_SCHEDULED_EMAILS=true
